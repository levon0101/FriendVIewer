<UserControl x:Class="FriendVIewer.Controls.FooterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriendVIewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Black">
    <StackPanel Orientation="Horizontal">
        <TextBlock Foreground="White">Friends: <Run Text="{Binding Friends.Count, Mode=OneWay}"/></TextBlock>
        <TextBlock Foreground="White" Text="Created by Levon Mardanyan, 2018" Margin="20 0 0 0"/>
    </StackPanel>
</UserControl>
