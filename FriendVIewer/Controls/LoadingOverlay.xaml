<UserControl x:Class="FriendVIewer.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriendVIewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#AAFFFFFF">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Loading Data" Margin="3" FontSize="20" Foreground="Black"/>
            <ProgressBar IsIndeterminate="True" BorderThickness="0" Margin="5" Height="10"
                         Foreground="red" Background="Black"/>
        </StackPanel>
    </Grid>
</UserControl>
