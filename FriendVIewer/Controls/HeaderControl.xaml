<UserControl x:Class="FriendVIewer.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriendVIewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background='Black'>
    <Grid>
        <TextBlock FontSize="30" Margin="0 0" HorizontalAlignment="Left" RenderTransformOrigin="0.5 0.0">
            <TextBlock.RenderTransform >
                <TransformGroup>
                    <RotateTransform Angle="-5" />
                    <SkewTransform AngleX="5" AngleY="0"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            <Bold Foreground="Red">Friend</Bold>Viewer

        </TextBlock>
    </Grid>
</UserControl>
